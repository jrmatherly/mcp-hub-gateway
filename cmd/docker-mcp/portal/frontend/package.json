  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "build:prod": "NODE_ENV=production TAILWIND_CONFIG=tailwind-performance.config.js next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint --strict",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "ANALYZE=true next build && node scripts/optimize-bundle.js",
    "preload": "node scripts/preload-chunks.js",
    "bundle-size": "npx bundle-analyzer",
    "perf": "npm run build:prod && npm run analyze",
    "tailwind:watch": "tailwindcss -w -i ./src/app/globals.css -o ./dist/tailwind.css",
    "tailwind:build": "tailwindcss -m -i ./src/app/globals.css -o ./dist/tailwind.css",
    "tailwind:optimize": "NODE_ENV=production tailwindcss --config tailwind-performance.config.js -m -i ./src/app/globals.css -o ./dist/tailwind-optimized.css",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:e2e": "vitest run tests/e2e",
    "test:unit": "vitest run tests/components tests/hooks tests/utils",
    "test:integration": "vitest run tests/app tests/pages",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=coverage/junit.xml",
    "knip": "knip",
    "knip:fix": "knip --fix"
  },
